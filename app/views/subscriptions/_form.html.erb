<div class="container">
  <div>
    <%= simple_form_for(subscription) do |f| %>
        <div class=" naming mx-2">
          <%= f.input :username, label: false, placeholder: "Username"%>
          <%= f.input :title, label: false, placeholder: "Title" %>
        </div>

        <div class="d-flex justify-content-around align-items-baseline fields bg-white">
          <%= f.input :category, collection: Subscription::CATEGORY , label: false, default: "Education"  %>
          <%= f.text_field :start_date, type:"date", class:"trip-start", :value => Date.today %>
          <%# <%= f.input :start_date, label: false %>
        </div>

        <div class="d-flex justify-content-around align-items-center fields bg-white">
          <%= f.input :price, label: false, class: "form_border", placeholder: "Price" %>
          <%= f.input :currency, collection: Subscription::CURRENCY, label: false, default: 'AED' %>
        </div>

        <div class="d-flex justify-content-around align-items-center fields bg-white">
          <%= f.input :notify_before, class: "form_border", label: false, placeholder: "Notify Before"  %>
          <%= f.input :sub_type, collection: Subscription::SUB_TYPE,  label: false, default: "monthly" %>
        </div>

        <div class=" justify-content-around m-2">
          <%= f.input :notes %>
        </div>

        <div class="d-flex justify-content-around align-items-end">
          <%= f.input :notify, as: :boolean, checked_value: true, unchecked_value: false %>
          <%= f.button :submit, 'Submit', class: 'btn btn-edit' %>
          <%= link_to 'Back', subscriptions_path, class: 'btn btn-back' %>
        </div>
    <% end %>
  </div>
</div>
