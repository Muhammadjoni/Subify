
<div class="container">
  <div class="row">
    <%# PROFIL div %>
        <div class="my-profile col-3 justify-content-start mt-5 profile">
          <h2>My Profile</h2>
          <br>
          <img src="https://pyxis.nymag.com/v1/imgs/da7/3f4/df4afe9cf95ad30101154ca391a0a24f94-12-christian-bale.2x.rsquare.w330.jpg" class="avatar-bordered " alt="">
    
         <br>
          <h4><%= current_user.first_name %> <%= current_user.last_name %></h4>
         <h5> SMS number :</h5>
         <p> <%= current_user.sms_number %> </p>
         <h5>  Whatsapp number:</h5>
         <p><%= current_user.whatsapp_number %> </p>
         <h5> Email :</h5>
         <p><%= current_user.email %> </p>

        </div>
    <%# Subs Cards %>
      <div class="search-column col-9">
        <h1 class="d-flex justify-content-center mt-5">Your subscriptions</h1>

        <div class="search-bar d-flex">

          <a class="btn btn-ghost m-3" <%= link_to "Add subscriptions", new_subscription_path %></a>
          <div class="d-flex">

            <div class="form-control-index">
              <%= form_tag subscriptions_path, method: :get do %>
                  <%= text_field_tag :query,
                    params[:query],
                    class: "form-control",
                    placeholder: "Find a subscription" %>
            </div>

                <div>
                  <%= submit_tag "Search ðŸ”Žï¸Ž" , class: "btn btn-gradient" %>
                </div>
              <% end %>
          </div>

          <div class="category-box">
            <% grouped_subscriptions = @subscriptions.group_by { |subscription| subscription.category } %>
            <% grouped_subscriptions.each_pair do |key, subscriptions| %>
              <h3 class="m-2"><%= "Category #{key}" %></h3>
                <div class="subscriptions-list-wraper" id="subscriptions">
                  <div class="row">
                    <div class="col-md">
                      <div class="cards" >
                        <%  subscriptions.each do |subscription|  %>
                            <% border = (subscription.end_date - Date.today).to_i %>
                            <% if border < 2 %>
                              <% color = "danger" %>
                            <% elsif border > 2 && border < 7 %>
                              <% color = "warning" %>
                            <% else %>
                              <% color = "success" %>
                            <% end %>
                          <div class="card p-5 border-top-0 border-right-0 border-bottom-0 border-xl border-<%= color %> " style="background-image:
                            linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)),
                            url ()">
                            <%= link_to subscription.title, subscription_path(subscription) %>
                          </div>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
            <% end %>
      </div>
  </div>
</div>
