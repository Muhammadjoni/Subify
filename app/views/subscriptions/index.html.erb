<%= form_tag subscriptions_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a subscription"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-8">
      <div id="subscriptions">
        <% @subscriptions.each do |subscription| %>
          <h4><%= link_to subscription.title, subscription_path(subscription) %></h4>
          <p> from <%= subscription.category %></p>
        <% end %>
      </div>
    </div>
  </div>
